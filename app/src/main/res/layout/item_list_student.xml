<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card-view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_left_min"
    android:layout_marginLeft="@dimen/margin_left_min"
    android:layout_marginTop="@dimen/margin_top_min"
    android:layout_marginEnd="@dimen/margin_left_min"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_active">

        <ImageView
            android:id="@+id/imgStudent"
            android:layout_width="@dimen/size_icon_large"
            android:layout_height="@dimen/size_icon_large"
            android:layout_marginStart="@dimen/margin_left_min"
            android:layout_marginLeft="@dimen/margin_left_min"
            android:background="@drawable/ic_student"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvNameStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_left_x_min"
            android:layout_marginLeft="@dimen/margin_left_x_min"
            android:layout_marginTop="@dimen/margin_top_x_small"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/size_text_normal"
            app:layout_constraintLeft_toRightOf="@+id/imgStudent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAgeStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_left_x_min"
            android:layout_marginLeft="@dimen/margin_left_x_min"
            android:layout_marginTop="@dimen/margin_top_min"
            android:layout_marginBottom="@dimen/margin_bottom_small"
            android:gravity="center"
            android:textSize="@dimen/size_text_xx_min"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/imgStudent"
            app:layout_constraintTop_toBottomOf="@+id/tvNameStudent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>